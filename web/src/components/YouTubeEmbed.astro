---
interface Props {
  videoId: string;
  title?: string;
}

const { videoId, title = "YouTube video player" } = Astro.props;
---

<div class="aspect-video w-full rounded-2xl overflow-hidden shadow-lg my-8 border border-clay/20 dark:border-charcoal-light">
  <iframe
    width="100%"
    height="100%"
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
  ></iframe>
</div>
